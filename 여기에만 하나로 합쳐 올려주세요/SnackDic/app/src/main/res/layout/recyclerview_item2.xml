<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <!-- A CardView that contains a TextView -->
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="50dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_FB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:scaleType="centerCrop"
            card_view:riv_corner_radius_top_left="50dp"
            card_view:riv_corner_radius_top_right="50dp"
            card_view:riv_corner_radius_bottom_left="50dp"
            card_view:riv_corner_radius_bottom_right="50dp"
            android:src="@mipmap/ic_launcher_round"
            card_view:riv_border_color="#333333"
            card_view:riv_mutate_background="true"
            card_view:riv_oval="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:alpha="0.6"
            android:background="@android:color/black"
            android:orientation="vertical">

            <TextView
                android:layout_margin="20dp"
                android:id="@+id/text_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_weight="0.2"
                android:text="test" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>